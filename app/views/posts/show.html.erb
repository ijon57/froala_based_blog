<%= render 'shared/header' %>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="post-preview">
        <h2 class="post-title">
          <%= @post.title %>
          <%= link_to "[Edit]", edit_post_path(@post) %>
        </h2>
        <div class="fr-view">
          <%= raw @post.text %>
        </div>
      </div>
    </div>
  </div>
</div>
